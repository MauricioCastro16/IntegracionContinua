{
  "name": "integracioncontinua",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "npx vite dev",
	"build": "npx vite build",
    "preview": "npx vite preview",
	"prepare": "npx svelte-kit sync",
    "check": "npx svelte-kit sync && npx svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "npx svelte-kit sync && npx svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "npx vitest",
    "test": "npm run test:unit -- --run && npm run test:e2e",
    "test:e2e": "npx playwright test",
    "format": "npx prettier --write .",
    "lint": "npx prettier --check . && npx eslint .",
    "docker-build": "docker build -t sveltekit-app:latest .",
    "docker-run": "docker run -p 3000:3000 --name sveltekit-app-container sveltekit-app:latest",
    "docker-stop": "docker stop sveltekit-app-container || true",
    "docker-rm": "docker rm sveltekit-app-container || true",
    "docker-rebNrun": "npm run docker-stop && npm run docker-rm && npm run docker-build && npm run docker-run"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.49.1",
    "@sveltejs/adapter-node": "^5.2.12",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/vite": "^4.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.4",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.2.6",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": "20.x"
  }
}
